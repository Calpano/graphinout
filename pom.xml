<!--            <id>github-graphinout</id>-->
<!--            <name>GitHub Graphinout Maven Packages</name>-->
<!--            <url>https://maven.pkg.github.com/Calpano/graphinout</url>-->
<!--        </repository>-->
    </distributionManagement>

</project>
